<%- include header %>
<% posts.forEach(function (post, index) { %>
	<p><h2><a href="/u/<%= encodeURI(post.name) %>/<%= post.time.day %>/<%= encodeURI(post.title) %>"><%= post.title %></a></h2></p>
	<p class="info">
		作者：<a href="/u/<%= encodeURI(post.name) %>"><%= post.name %></a>
		日期：<%= post.time.minute %>
	</p>
	<p><%- post.post %></p>
<% }) %>
<%- include footer %>